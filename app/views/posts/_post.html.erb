<div class="card border-dark  bg-transparent mb-3 mx-auto" style="max-width: 18rem;">
  <div class="card-body text-dark">
    <h5 class="card-title"><%= simple_format(post.title) %></h5>
    <%= l post.created_at, format: :short %>
    <div class="text-content">
      <%= post.content %>
    </div>
    <div class="card-footer border-dark">
      <%= link_to "詳細", post_path(post) %>
      <%= link_to "編集", edit_post_path(post) %>
      <%= link_to "削除", post_path(post), method: :delete, data: { confirm: "削除しますか?" }  %>
    </div>
  </div>
</div>
